{
  "name": "broccoli-source",
  "description": "Broccoli plugin for referring to source directories on the file system",
  "version": "2.0.0",
  "author": "Jo Liss <joliss42@gmail.com>",
  "main": "index.js",
  "types": "index.d.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/broccolijs/broccoli-source"
  },
  "keywords": [
    "broccoli-plugin"
  ],
  "files": [
    "index.js",
    "index.ts",
    "index.d.ts",
    "index.js.map"
  ],
  "scripts": {
