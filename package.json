    "chai": "^3.2.0",
    "chai-as-promised": "^5.1.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-mocha": "^5.3.0",
    "eslint-plugin-prettier": "^3.0.1",
    "mocha": "^6.1.2",
    "multidep": "^2.0.0",
    "prettier": "^1.16.4",
